<div class="container-divider"></div>
<div class="container">
  <div class="sub-nav">
    {{breadcrumbs}}
  </div>

  <div class="section-container">
    <section id="main-content" class="section-content">


      {{pagination "section.sections"}}

      {{#if section.articles}}
        <section style="display: flex;gap: 100px">
          <div style="display: flex;
flex-basis: 800px;
flex-direction: column;
align-items: normal;
gap: 20px;">

            <ul class="process-blocks-list">
              {{#each section.articles}}
                <li class="process-blocks-item">
                    {{title}}{{url}}
                </li>
              {{/each}}
            </ul>
          </div>

          <div style="display: flex;width: 303px;flex-direction: column;align-items: flex-start;gap: 40px;">
            <div style="border-radius: 8px;background: #F3EFF7;padding: 40px 27px;">
              <h2>Can't find what you are looking for?</h2>
              <p>Our team of experts is here to help</p>
              <button style="border-radius: 10px;
background: #501E78;color: #ffffff;display: flex;
padding: 14px 16px;
flex-direction: column;
align-items: flex-start;
gap: 10px;
">Contact us</button>
            </div>
          </div>
        </section>
        <section class="section-content">
          <span class="topics-title">OTHER TOPICS</span>
          <ul class="topics-blocks-list">
            {{#each (slice section.articles 3 5) }}
              <li class="topics-blocks-item">
                <a href='{{url}}' class="topics-blocks-item-link">
                  <span class="topics-item-title">{{title}}</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path
                      d="M11.777 4.14414C11.9911 3.95195 12.1932 3.95195 12.3835 4.14414L19.8395 11.7117C20.0535 11.9039 20.0535 12.0961 19.8395 12.2883L12.3835 19.8559C12.1932 20.048 11.9911 20.048 11.777 19.8559L11.0635 19.1351C10.9922 19.0631 10.9565 18.967 10.9565 18.8468C10.9565 18.7267 10.9922 18.6186 11.0635 18.5225L16.5931 12.9369H4.42809C4.1427 12.9369 4 12.7928 4 12.5045V11.4955C4 11.2072 4.1427 11.0631 4.42809 11.0631H16.5931L11.0635 5.47748C10.8733 5.26126 10.8733 5.05706 11.0635 4.86486L11.777 4.14414Z"
                      fill="black" />
                  </svg>
                </a>
              </li>

            {{/each}}
          </ul>
        </section>
      {{/if}}



    </section>

  </div>
</div>
